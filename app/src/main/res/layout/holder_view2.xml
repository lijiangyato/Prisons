<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/attribute_linearlayout_id"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:background="@drawable/dieg_background_view"
        android:gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:background="#2196d4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_22" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="指静脉登录"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_22" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right">

                <ImageView

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/ic_launcher" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <com.thinkcool.circletextimageview.CircleTextImageView
                android:id="@+id/name_zhijiangmai_id"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                android:src="@mipmap/icon_vein_normal"
                app:citv_border_color="@android:color/darker_gray"
                app:citv_border_width="2dp"
                app:citv_fill_color="#50555D"
                app:citv_text_color="#ff99cc00"
                app:citv_text_padding="35dp"
                app:citv_text_size="32sp" />


            <ImageView
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_200"
                android:layout_gravity="center"
                android:src="@mipmap/icon_vein_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/main_vein_show_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_vein_gif_iv"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="请放入手指"
                android:textColor="#2196d4"
                android:textSize="22dp" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>